---
import { SITE } from '../data/site'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro'

const { title = SITE.name } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Global Styles -->
    <link rel="stylesheet" href="/styles/global.css" />

    <!-- Google Tag (placeholder – add real ID only when safe) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-XXXXXXX"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
    </script>

    <!-- Top Disclaimer -->
    <meta
      name="description"
      content="Información independiente sobre asistencia privada y orientación para contratar servicios de apoyo prehospitalario."
    />
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
    <!-- Site-wide Disclaimer -->
    <div
      class="w-full bg-gray-100 text-gray-700 text-sm py-2 px-4 text-center border-b border-gray-200"
    >
      {SITE.disclaimers.top}
    </div>

    <Header />
    <FloatingWhatsApp />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
